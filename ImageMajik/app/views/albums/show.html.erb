<p id="notice"><%= notice %></p>

<p>
  <strong>Album Title:</strong>
  <%= @album.title %>
  <strong>User ID:</strong>
  <%= @album.user_id %>
</p>

<p><%= link_to 'Edit', edit_album_path(@album) %> |
	<%= link_to 'Back', albums_path %>
</p>

<body>
  <div id="images">
    <% @album.images.each do |image| %>
      <br>
        <div class="image">
          <%= image_tag image.picture_url.to_s %>
          <p><strong>Label:</strong>
            <%= link_to image.label, image %></p>
          <p><strong>Caption:</strong>
            <%= image.caption %></p>
          <p><%= link_to 'Edit', edit_image_path(image) %>
            <%= link_to 'Delete', image, method: :delete, data: { confirm: 'Are you sure?' } %>
          </p>
        </div>
       <br>
     <% end %>
  </div>
</body>

<p><%= link_to 'Add Image', new_album_image_path(@album) %></p>
