<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @album.title %>
  <strong>User ID:</strong>
  <%= @album.user_id %>
</p>

<p><%= link_to 'Edit', edit_album_path(@album) %> |
	<%= link_to 'Back', albums_path %>
</p>

<body>
    <% @album.images.each do |image| %>
      <br>
        <p><%= link_to image.label, image %></p>
        <p><%= image.caption %></p>
        <p><%= link_to 'Edit', edit_image_path(image) %></p>
        <p><%= link_to 'Delete', image, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      <br>
    <% end %>
</body>

<p><%= link_to 'Add Image', new_album_image_path(@album) %></p>
