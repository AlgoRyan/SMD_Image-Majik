<h1>Listing Images</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
</table>
  <body>
    <% @images.each do |image| %>
      <br>
        <p><%= link_to image.label, image %></p>
        <p><%= link_to 'Edit', edit_image_path(image) %></p>
        <p><%= link_to 'Delete', image, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      <br>
    <% end %>
  </body>


<br>

<p><%= link_to 'Add New Image', new_image_path %></p>
